{
  "expo": {
    "name": "LogiMarket",
    "slug": "logimarket",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "automatic",
    "scheme": "logimarket",
    "splash": {
      "image": "./assets/splash-icon.png",
      "resizeMode": "contain",
      "backgroundColor": "#1e40af"
    },
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.logimarket.app",
      "infoPlist": {
        "NSLocationWhenInUseUsageDescription": "LogiMarket needs your location to track shipments.",
        "NSLocationAlwaysUsageDescription": "LogiMarket tracks shipment locations in the background.",
        "NSCameraUsageDescription": "LogiMarket needs camera access to scan documents.",
        "NSPhotoLibraryUsageDescription": "LogiMarket needs photo library access to upload documents."
      },
      "config": {
        "googleMapsApiKey": "{{EXPO_PUBLIC_GOOGLE_MAPS_API_KEY}}"
      }
    },
    "android": {
      "package": "com.logimarket.app",
      "adaptiveIcon": {
        "backgroundColor": "#1e40af",
        "foregroundImage": "./assets/adaptive-icon.png"
      },
      "permissions": [
        "ACCESS_FINE_LOCATION",
        "ACCESS_COARSE_LOCATION",
        "CAMERA",
        "READ_EXTERNAL_STORAGE",
        "WRITE_EXTERNAL_STORAGE",
        "RECEIVE_BOOT_COMPLETED",
        "VIBRATE"
      ],
      "config": {
        "googleMaps": {
          "apiKey": "{{EXPO_PUBLIC_GOOGLE_MAPS_API_KEY}}"
        }
      },
      "googleServicesFile": "./google-services.json"
    },
    "plugins": [
      "expo-router",
      "expo-secure-store",
      "expo-notifications",
      "expo-location",
      "expo-image-picker",
      "expo-document-picker",
      [
        "expo-splash-screen",
        {
          "backgroundColor": "#1e40af",
          "image": "./assets/splash-icon.png",
          "imageWidth": 200
        }
      ]
    ],
    "extra": {
      "router": {
        "origin": false
      },
      "eas": {
        "projectId": "your-eas-project-id"  
      }
    },
    "owner": "logimarket"
  }
}
